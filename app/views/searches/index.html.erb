<section>
  <header>
    <h1>
      <%= pluralize(@user_searches.length, 'Search') %>
    </h1>
  </header>

  <div >
    <ul>
      <% if @user_searches.empty? %>
        <p>
          &mdash;&nbsp; No searches &nbsp;&mdash;
        </p>
      <% else %>
        <% @user_searches.entries.each do |title, count| %>
          <li>
            <%= render "search", search: {title: title, count: count} %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</section>